```c++
// ConsoleApplication11.cpp: определяет точку входа для консольного приложения.
//

#include "stdafx.h"
#include <iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");
	begin:
	float k_1, k_2;
	cout << "Первый коэффициент (через точку):";
	cin >> k_1;
	cout << "Второй коэффициент (через точку):";
	cin >> k_2;
	if (k_2 > k_1 / (k_1 - 1)) {
		cout << "Можно работать" << endl;
		float a1, a2, b1, b2, I;
		cout << "\nСколько всего ставим на данное событие:";
		cin >> I;
		a1 = I / k_1;
		a2 = (k_2 - 1)*I / k_2;
	choose: //
		cout << "\nНа первый коэффициент можно поставить строго от " << a1 << " до " << a2 << "(Совет: на больший коэффициент ставь побольше, в случае его победы выигрышь будет максимально возможным)" << endl;
		cout << "\nСколько хочешь поставить на первый коэффициент? Ответ:";
		float a;
		float b;
		cin >> a;
		if (a > a1 & a < a2) {
			b = I - a;
		}
		else
		{
			cout << "\nНужно выбирать из расчитываемого диапазона, учитывая, что неравенство строгое" << endl;
			goto choose; //
		}
		cout << "----------------------------------------------------" << endl;
		cout << "Ставим на первый коэффициент: " << a << "\nСтавим на второй коэффициент: " << b << endl;
		cout << "При победе первого коэффицента:	" << "Полный выигрышь: " << k_1*a << "\tЧистая прибыль: " << k_1*a - I << endl;
		cout << "При победе второго коэффицента:	" << "Полный выигрышь: " << k_2*b << "\tЧистая прибыль: " << k_2*b - I << endl;

	}
	else
		cout << "Все плохо" << endl;
	goto begin;
    return 0;
}

